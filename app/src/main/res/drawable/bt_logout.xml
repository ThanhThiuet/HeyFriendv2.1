<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#bcbcbc"></solid>
            <corners
                android:radius="10dp"
                ></corners>
        </shape>
    </item>
    <item >
        <layer-list>
            <item android:top="4dp" android:left="2dp">
                <shape
                    android:shape="rectangle">
                    <solid android:color="#bcbcbc"></solid>
                    <corners
                        android:radius="10dp"
                        ></corners>
                </shape>
            </item>
            <item android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#fac6c6"></solid>
                    <padding
                        android:bottom="5dp"
                        android:right="5dp"></padding>
                    <corners
                        android:radius="10dp"
                        ></corners>
                </shape>
            </item>
        </layer-list>

    </item>

</selector>