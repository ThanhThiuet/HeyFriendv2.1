<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#f3f4ef"></solid>
            <corners
                android:radius="10dp"
                ></corners>
        </shape>
    </item>
    <item>
        <layer-list>
            <item android:top="3dp" android:left="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="#bcbcbc"></solid>
                    <corners
                        android:radius="10dp"
                        ></corners>
                </shape>
            </item>
            <item android:bottom="2dp" android:right="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#e5ffe0"></solid>
                    <corners
                        android:radius="10dp"
                        ></corners>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>