<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.chi.heyfriendv21.activity.MainActivity"
    tools:showIn="@layout/app_bar_main">
    <android.support.percent.PercentRelativeLayout
        app:layout_widthPercent="100%"
        app:layout_heightPercent="10%"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:id="@+id/rlMainActionBar"

        >
        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/ripple_view_nav_button"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            app:layout_marginLeftPercent="3%"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleAlpha="0.1"
            app:mrl_rippleDimension="10dp"
            app:mrl_rippleColor="@android:color/darker_gray"
            app:mrl_rippleRoundedCorners="50dp"
            app:mrl_rippleInAdapter="false"
            app:mrl_rippleDuration="500"
            app:mrl_rippleFadeDuration="75"
            app:mrl_rippleDelayClick="false"
            app:mrl_rippleBackground="@android:color/transparent"

            >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_white"
                android:layout_gravity="center"
                android:id="@+id/ibNav"
                />
        </com.balysv.materialripple.MaterialRippleLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:id="@+id/tvTitle"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/ripple_view_action_button"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent="3%"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleAlpha="0.1"
            app:mrl_rippleDimension="10dp"
            app:mrl_rippleColor="@android:color/darker_gray"
            app:mrl_rippleRoundedCorners="50dp"
            app:mrl_rippleInAdapter="false"
            app:mrl_rippleDuration="500"
            app:mrl_rippleFadeDuration="75"
            app:mrl_rippleDelayClick="false"
            app:mrl_rippleBackground="@android:color/transparent"
            android:visibility="gone"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="&#8942;"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:id="@+id/btHelp"
                android:textStyle="bold"
                />
        </com.balysv.materialripple.MaterialRippleLayout>
        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/ripple_view_search_button"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent="3%"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleAlpha="0.1"
            app:mrl_rippleDimension="10dp"
            app:mrl_rippleColor="@android:color/darker_gray"
            app:mrl_rippleRoundedCorners="50dp"
            app:mrl_rippleInAdapter="false"
            app:mrl_rippleDuration="500"
            app:mrl_rippleFadeDuration="75"
            app:mrl_rippleDelayClick="false"
            app:mrl_rippleBackground="@android:color/transparent"
            >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_action_ic_search_black_24px"
                android:layout_gravity="center"
                android:id="@+id/ibSearch"
                />
        </com.balysv.materialripple.MaterialRippleLayout>
        <View xmlns:android="http://schemas.android.com/apk/res/android"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="5%"
            android:id="@+id/shadow_actionbar"
            android:background="@drawable/shadow_action_bar"
            android:layout_alignParentBottom="true"
            />
    </android.support.percent.PercentRelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        app:layout_heightPercent="90%"
        android:id="@+id/fragment_container"
        android:layout_alignParentBottom="true"
        />

</android.support.percent.PercentRelativeLayout>
