<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/ivAvatar_ItemRecyclerViewTimeline"
            android:src="@android:drawable/alert_dark_frame"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/tvName_ItemRecyclerViewTimeline"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="Nguyen Chi"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/tvTime_ItemRecyclerViewTimeline"
                android:textAppearance="?android:textAppearanceSmall"
                android:text="6 days ago"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvContent_ItemRecyclerViewTimeline"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="Hello, it's me"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@android:drawable/alert_dark_frame"
        android:id="@+id/ivImage_ItemRecyclerViewTimeline"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>
</LinearLayout>